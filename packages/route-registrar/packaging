#!/usr/bin/env bash
set -e

PACKAGE_NAME=github.com/cloudfoundry-incubator/route-registrar
PACKAGE_DIR=${BOSH_INSTALL_TARGET}


cp -a route-registrar/src ${BOSH_INSTALL_TARGET}


export GOPATH=$BOSH_INSTALL_TARGET:$BOSH_INSTALL_TARGET/src/Godeps/_workspace
export GOROOT=$(readlink -nf /var/vcap/packages/go)
export PATH=$GOROOT/bin:$PATH

go install ${PACKAGE_NAME}

# clean up source artifacts
rm -rf ${BOSH_INSTALL_TARGET}/src ${BOSH_INSTALL_TARGET}/pkg
